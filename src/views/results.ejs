<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Resultados de tu búsqueda'}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner"></div>
	<!-- /Banner -->

	<!-- todos los productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de la búsqueda: </h2>
			</div>
			<% searched.forEach(visited => { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/<%= visited.id %>">
							<figure class="product-box_image">
								<img src="/images/products/<%= visited.image %>" alt="imagen de producto">
							</figure>
							<article class="product-box_data">
								<h2>$<%= visited.price %></h2>
								<span><%= visited.discount %> OFF</span>
								<p><%= visited.name %></p>
								<i class="fas fa-truck"></i>
							</article>
						</a>
					</section>
				</div>
				<% }) %>
		
		</div>
	</div>
	
	<% if (searched.length==0) { %>
		<div class="col-12">
			<h2 class="products-title" style="color: tomato;">No hay productos que coincidan con esa búsqueda</h2>
		</div>
	  <% } %>
	
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>